{
  "compilerOptions": {
    "declaration": true,
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom"
    ]
  },
  "include": [
    "src",
    "package.json"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}